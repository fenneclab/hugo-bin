{
  "root": true,
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "rules": {
    "prefer-destructuring": [
      "error",
      {
        "object": true,
        "array": false
      }
    ],
    "semi": "error"
  }
}
